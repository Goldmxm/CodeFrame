<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_item"
    style="@style/ItemClickStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_1dp">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/meituan_bal_green_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_6dp"
        android:paddingTop="@dimen/common_6dp">

        <TextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_3dp"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/bal_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_10sp" />

    </LinearLayout>

</FrameLayout>